#!/bin/bash

cutx=`echo "$1"| cut -d '.' -f1` # هنا بيعمل مسح لما بعد اول نقطة علشان مينفعش تعمل سيشن في اسمها نقطة

tmux new -d -s $cutx # هنا بيعمل نافذة او سيشن جديدة
tmux send-keys -t $cutx.0 "xelkomy $1" ENTER #غير الامر دا الي الامر الي انت عايزة بقا - هنا بينفذ الامر في السيشن او النافذة الجديدة بدون الدخول فيها
